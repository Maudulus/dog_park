<h1>Enter Your Doggy Info!</h1>

<%= form_for(@owner) do |f| %>
<% if @owner.errors.any? %>
<div id= "error_explanation">
  <h2><%= pluralize(@owner.errors.count, "error") %>prohibited this issue from being saved:</h2>

  <ul>
    <% @owner.errors.full_messages.each do |msg| %>
    <li><%= msg %> </li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <%= f.label :first_name %> <br>
  <%= f.text_field :first_name %>
</div>
<div class="field">
  <%= f.label :last_name %> <br>
  <%= f.text_field :last_name %>
</div>
<div class="field">
  <%= f.label :dog_name %> <br>
  <%= f.text_field :dog_name %>
</div>
<div class="field">
  <%= f.label :email %> <br>
  <%= f.text_field :email %>
</div>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>
